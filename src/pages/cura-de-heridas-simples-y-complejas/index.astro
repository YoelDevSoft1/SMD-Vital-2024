---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Cura de Heridas Simples y Complejas en Bogotá | SMD Vital',
  description:
    'Recibe atención profesional para la cura de heridas simples y complejas en Bogotá con SMD Vital. Cuidamos de tu recuperación de forma segura y eficiente.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Emergencia',
          href: 'tel:3042912564',
        },
        {
          variant: 'primary',
          text: 'WhatsApp',
          href: 'https://wa.me/573042912564',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Expertos en el Cuidado de Heridas"
    actions={[
      { variant: 'primary', target: '_blank', text: 'WhatsApp', href: 'https://wa.me/573042912564' },
      { variant: 'secondary', text: 'Llamada de emergencia', href: 'tel:3042912564' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5721555/pexels-photo-5721555.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Cura de Heridas Simples y Complejas',
    }}
  >
    <Fragment slot="title">
      Recupera tu Bienestar con <br /><span class="text-accent dark:text-white highlight">SMD Vital</span><br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Con <span class="font-semibold">SMD Vital Bogotá</span>, brindamos cuidado profesional para heridas de cualquier
        tipo.</span
      >
      Nuestro servicio asegura limpieza, tratamiento y seguimiento adecuados para una recuperación óptima.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="¿Por qué elegir nuestro servicio de Cura de Heridas?"
    subtitle="Beneficios únicos de nuestra atención especializada en Bogotá"
    columns={2}
    items={[
      {
        title: 'Atención personalizada',
        description:
          'Evaluamos cada herida de forma individual para garantizar el tratamiento adecuado según su gravedad y tipo.',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Prevención de infecciones',
        description: `Utilizamos técnicas avanzadas y materiales de alta calidad para minimizar riesgos de infección y acelerar la cicatrización.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Cuidado profesional en casa',
        description:
          'Ofrecemos un servicio domiciliario para que recibas atención médica especializada sin salir de tu hogar.',
        icon: 'tabler:writing',
      },
      {
        title: 'Seguimiento continuo',
        description: `Nos aseguramos de monitorear el progreso de tu recuperación, ajustando el tratamiento según sea necesario.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Casos de Uso"
    subtitle="Descubre cómo SMD Vital Bogotá puede ayudarte en el cuidado de tus heridas."
    isReversed
    items={[
      {
        title: 'Tratamiento de Heridas Postquirúrgicas',
        description:
          'Atendemos heridas quirúrgicas con el máximo cuidado, asegurando una cicatrización rápida y efectiva.',
      },
      {
        title: 'Cura de Heridas Crónicas',
        description: `Brindamos atención especializada a pacientes con heridas crónicas como úlceras por presión o pie diabético.`,
      },
      {
        title: 'Heridas Traumáticas',
        description: `Atendemos heridas causadas por accidentes, garantizando limpieza adecuada y manejo del dolor.`,
      },
      {
        title: 'Cuidado de Heridas Complejas',
        description: `Nos especializamos en el tratamiento de heridas profundas o infectadas, con protocolos avanzados de cuidado médico.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7723629/pexels-photo-7723629.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Casos de Uso de Cura de Heridas',
    }}
  />

  <Content
    isAfterContent={true}
    items={[
      {
        title: 'Tratamiento de Heridas Complejas',
        description: `Especializados en heridas profundas o infectadas, aplicamos técnicas avanzadas para promover una recuperación efectiva.`,
      },
      {
        title: 'Beneficios:',
        description: `Evaluación precisa y cuidado profesional. <br /> Materiales de alta calidad para una cura óptima. <br /> Monitoreo continuo para ajustar el tratamiento según necesidad.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5146537/pexels-photo-5146537.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Heridas Complejas',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Tratamiento Avanzado <br /><span class="text-2xl">para Heridas Complejas</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Atención a Heridas Crónicas',
        description: `Tratamos úlceras por presión, pie diabético y otras heridas persistentes, mejorando la calidad de vida de los pacientes.`,
      },
      {
        title: 'Beneficios:',
        description: `Seguimiento continuo por especialistas. <br /> Métodos innovadores para fomentar la cicatrización. <br /> Reducción de riesgos asociados a infecciones prolongadas.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7722685/pexels-photo-7722685.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Heridas Crónicas',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Manejo Efectivo <br /><span class="text-2xl">de Heridas Crónicas</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'Atención Postquirúrgica',
        description: `Nos encargamos del cuidado de heridas postquirúrgicas, asegurando una recuperación libre de complicaciones.`,
      },
      {
        title: 'Beneficios:',
        description: `Cuidado profesional desde el primer día. <br /> Técnicas para minimizar el riesgo de infecciones. <br /> Supervisión médica para una cicatrización acelerada.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/6519897/pexels-photo-6519897.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Atención Postquirúrgica',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Cuidado Integral <br /><span class="text-2xl">Postquirúrgico</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas frecuentes"
    items={[
      {
        title: '¿Qué incluye el servicio de cura de heridas?',
        description:
          'Incluye limpieza, desinfección, aplicación de materiales de curación y seguimiento del progreso hasta la recuperación completa.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿El servicio está disponible para heridas de cualquier tipo?',
        description: `Sí, tratamos heridas simples, complejas, crónicas y postquirúrgicas con técnicas especializadas.`,
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Se realiza el servicio a domicilio?',
        description:
          'Sí, ofrecemos atención domiciliaria para que puedas recibir tratamiento profesional sin desplazarte.',
        icon: 'tabler:chevrons-right',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Contáctanos"
    subtitle="¿Tienes preguntas sobre nuestro servicio de cura de heridas? ¡Estamos aquí para ayudarte!"
    callToAction={{
      text: 'WhatsApp',
      href: 'https://wa.me/573042912564',
    }}
    items={[
      {
        title: 'Correo electrónico',
        description: 'salud@smdvitalbogota.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call Center',
        description: '+57 (304) 291-2564',
        icon: 'tabler:headset',
      },
      {
        title: 'Síguenos',
        description: '@smdvitalbogota',
        icon: 'tabler:brand-twitter',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Conoce más sobre el cuidado de heridas"
    information={`Nuestro blog está diseñado para ofrecerte información útil y consejos sobre cómo cuidar tus heridas de manera efectiva. ¡Gracias por leernos!`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
