---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Electrocardiografía Básica en Bogotá | SMD Vital',
  description: 'Realiza tu electrocardiograma básico en Bogotá con SMD Vital. Servicios médicos a domicilio con equipos de alta precisión y personal capacitado.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Emergencia',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'WhatsApp',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Confianza en Cada Latido"
    actions={[
      { variant: 'primary', target: '_blank', text: 'WhatsApp', href: 'https://wa.me/573042912564' },
      { variant: 'secondary', text: 'Llamada de emergencia', href: '#features' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7578808/pexels-photo-7578808.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Electrocardiografía Básica',
    }}
  >
    <Fragment slot="title">
      Diagnósticos de Precisión con <br /><span class="text-accent dark:text-white highlight">SMD Vital</span><br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Con <span class="font-semibold">SMD Vital Bogotá</span>, realizamos electrocardiogramas en la comodidad de tu hogar.</span>
      Contamos con equipos avanzados y personal médico capacitado para resultados confiables y rápidos.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="¿Por qué elegir nuestro servicio de Electrocardiografía Básica?"
    subtitle="Beneficios únicos de nuestra atención especializada en Bogotá"
    columns={2}
    items={[
      {
        title: 'Equipos de Alta Tecnología',
        description:
          'Utilizamos dispositivos avanzados que garantizan mediciones precisas y confiables.',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Atención Personalizada',
        description: `Nuestro equipo médico analiza los resultados y brinda orientación clara sobre tu salud cardíaca.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Servicio a Domicilio',
        description:
          'Realizamos electrocardiogramas en tu hogar, evitando desplazamientos y largas esperas.',
        icon: 'tabler:writing',
      },
      {
        title: 'Resultados Rápidos',
        description: `Proporcionamos un informe detallado en poco tiempo, ideal para decisiones médicas oportunas.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Casos de Uso"
    subtitle="Descubre cómo SMD Vital Bogotá puede ayudarte con tus necesidades de electrocardiografía."
    isReversed
    items={[
      {
        title: 'Control de Enfermedades Crónicas',
        description:
          'Realizamos electrocardiogramas regulares para monitorear condiciones como hipertensión y arritmias.',
      },
      {
        title: 'Evaluaciones Prequirúrgicas',
        description: `Ofrecemos diagnósticos previos a cirugías para asegurar la salud cardíaca del paciente.`,
      },
      {
        title: 'Chequeos Preventivos',
        description: `Detectamos posibles anomalías cardíacas antes de que se conviertan en problemas graves.`,
      },
      {
        title: 'Evaluación de Síntomas Cardíacos',
        description: `Ideal para pacientes con dolor torácico, palpitaciones u otros síntomas relacionados al corazón.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5327862/pexels-photo-5327862.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Casos de Uso de Electrocardiografía',
    }}
  />

  <Content
    isAfterContent={true}
    items={[
      {
        title: 'Electrocardiografía para Control de Ritmo',
        description: `Detectamos y monitoreamos arritmias, proporcionando información valiosa para tratamientos médicos.`,
      },
      {
        title: 'Beneficios:',
        description: `Resultados confiables y rápidos. <br /> Atención personalizada a domicilio. <br /> Informe detallado para el seguimiento médico.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7088841/pexels-photo-7088841.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Control de Ritmo Cardíaco',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Diagnóstico Preciso <br /><span class="text-2xl">para Ritmo Cardíaco</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Electrocardiografía Prequirúrgica',
        description: `Garantizamos que tu corazón esté en condiciones óptimas antes de cualquier intervención quirúrgica.`,
      },
      {
        title: 'Beneficios:',
        description: `Evaluación integral de la salud cardíaca. <br /> Reducción de riesgos durante procedimientos médicos. <br /> Tranquilidad para pacientes y médicos.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7345477/pexels-photo-7345477.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Electrocardiografía Prequirúrgica',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Seguridad Médica <br /><span class="text-2xl">en Procedimientos</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'Monitoreo Preventivo',
        description: `Ideal para personas con historial familiar de enfermedades cardíacas o factores de riesgo como hipertensión.`,
      },
      {
        title: 'Beneficios:',
        description: `Prevención de problemas cardíacos mayores. <br /> Detección temprana de anomalías. <br /> Mayor tranquilidad y control de tu salud.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5327585/pexels-photo-5327585.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Monitoreo Preventivo Cardíaco',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Prevención Cardíaca <br /><span class="text-2xl">a tu Alcance</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas frecuentes"
    items={[
      {
        title: '¿Qué incluye el servicio de electrocardiografía?',
        description:
          'Incluye la realización del electrocardiograma, análisis de resultados y orientación médica especializada.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿El servicio está disponible a domicilio?',
        description: `Sí, realizamos electrocardiogramas en la comodidad de tu hogar para mayor conveniencia.`,
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Cuánto tiempo toma obtener los resultados?',
        description:
          'Proporcionamos un informe detallado en un plazo corto, garantizando rapidez y precisión.',
        icon: 'tabler:chevrons-right',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Contáctanos"
    subtitle="¿Tienes preguntas sobre nuestro servicio de electrocardiografía? ¡Estamos aquí para ayudarte!"
    callToAction={{
      text: 'WhatsApp',
      href: 'https://wa.me/573042912564',
    }}
    items={[
      {
        title: 'Correo electrónico',
        description: 'salud@smdvitalbogota.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call Center',
        description: '+57 (304) 291-2564',
        icon: 'tabler:headset',
      },
      {
        title: 'Síguenos',
        description: '@smdvitalbogota',
        icon: 'tabler:brand-twitter',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Aprende más sobre electrocardiografía"
    information={`Nuestro blog está diseñado para ofrecerte información útil y consejos sobre la importancia del cuidado cardíaco. ¡Gracias por leernos!`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
