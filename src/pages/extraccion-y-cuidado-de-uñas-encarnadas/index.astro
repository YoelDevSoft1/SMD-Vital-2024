---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Extracción y Cuidado de Uñas Encarnadas | SMD Vital',
  description:
    'Tratamientos especializados para la extracción y cuidado de uñas encarnadas en Bogotá. Atención profesional y técnicas avanzadas para tu bienestar.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Emergencia',
          href: 'tel:3042912564',
        },
        {
          variant: 'primary',
          text: 'WhatsApp',
          href: 'https://wa.me/573042912564',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Cuidado Integral para Uñas Encarnadas"
    actions={[
      { variant: 'primary', target: '_blank', text: 'WhatsApp', href: 'https://wa.me/573042912564' },
      { variant: 'secondary', text: 'Agenda una cita', href: '#features' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5619447/pexels-photo-5619447.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Extracción y Cuidado de Uñas Encarnadas',
    }}
  >
    <Fragment slot="title">
      Extracción y Cuidado de <br /><span class="text-accent dark:text-white highlight">Uñas Encarnadas</span><br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Tratamientos profesionales con técnicas avanzadas para aliviar y prevenir uñas encarnadas.</span
      >
      Nuestro equipo está preparado para brindarte el mejor cuidado en cualquier situación.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="¿Por qué elegir nuestro servicio de extracción y cuidado de uñas encarnadas?"
    subtitle="Comprometidos con tu comodidad y salud"
    columns={2}
    items={[
      {
        title: 'Atención Especializada',
        description:
          'Personal altamente capacitado para tratar uñas encarnadas, utilizando métodos efectivos y seguros.',
        icon: 'tabler:layers-union',
      },
      {
        title: 'Técnicas Avanzadas',
        description: `Empleamos las últimas técnicas y herramientas para asegurar una extracción precisa y sin dolor.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Cuidado Post-Tratamiento',
        description: 'Seguimiento detallado para garantizar una recuperación rápida y prevenir recurrencias.',
        icon: 'tabler:writing',
      },
      {
        title: 'Ambiente Seguro',
        description: `Instalaciones higiénicas y protocolos estrictos de bioseguridad para tu tranquilidad.`,
        icon: 'tabler:podium',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Servicios que Ofrecemos"
    subtitle="Descubre cómo SMD Vital Bogotá puede ayudarte con tus uñas encarnadas."
    isReversed
    items={[
      {
        title: 'Evaluación Inicial',
        description: 'Diagnóstico preciso para determinar el grado y tratamiento adecuado para tu caso.',
      },
      {
        title: 'Extracción Segura',
        description: `Procedimiento de extracción realizado con técnicas mínimamente invasivas para reducir molestias.`,
      },
      {
        title: 'Cuidado y Seguimiento',
        description: `Instrucciones detalladas y visitas de seguimiento para asegurar una correcta cicatrización.`,
      },
      {
        title: 'Prevención y Consejos',
        description: `Recomendaciones personalizadas para prevenir futuras uñas encarnadas y mantener una buena salud podal.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/4989138/pexels-photo-4989138.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Servicios de Extracción y Cuidado de Uñas Encarnadas',
    }}
  />

  <Content
    isAfterContent={true}
    items={[
      {
        title: 'Alivio del Dolor',
        description: `Reducción efectiva del dolor asociado con uñas encarnadas mediante tratamientos adecuados.`,
      },
      {
        title: 'Beneficios:',
        description: `Mejora de la movilidad. <br /> Prevención de infecciones. <br /> Recuperación rápida y segura.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/3985168/pexels-photo-3985168.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Alivio y Beneficios de Nuestros Tratamientos',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Alivio y Recuperación <br /><span class="text-2xl">Garantizados</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Cuidado Integral del Pie',
        description: `Atención completa para mantener tus pies saludables y libres de complicaciones.`,
      },
      {
        title: 'Beneficios:',
        description: `Mejora de la estética podal. <br /> Prevención de futuras uñas encarnadas. <br /> Bienestar general de tus pies.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/4021202/pexels-photo-4021202.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Cuidado Integral del Pie',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Salud y Bienestar <br /><span class="text-2xl">Podal</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'Atención en Urgencias Podales',
        description: `Servicios inmediatos para tratar complicaciones graves relacionadas con uñas encarnadas.`,
      },
      {
        title: 'Beneficios:',
        description: `Respuesta rápida y efectiva. <br /> Minimización de riesgos de infección. <br /> Tranquilidad en momentos críticos.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5207090/pexels-photo-5207090.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Urgencias Podales',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Atención Rápida <br /><span class="text-2xl">y Segura</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas frecuentes"
    items={[
      {
        title: '¿Qué es una uña encarnada?',
        description:
          'Es una condición en la cual la uña del pie crece hacia la piel, causando dolor, enrojecimiento e inflamación.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Cuándo debo consultar a un especialista?',
        description: `Si experimentas dolor severo, hinchazón o signos de infección, es importante buscar atención médica.`,
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Cómo puedo prevenir las uñas encarnadas?',
        description: 'Mantén una buena higiene podal, corta las uñas rectas y evita usar calzado ajustado.',
        icon: 'tabler:chevrons-right',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Contáctanos"
    subtitle="¿Tienes preguntas sobre nuestro servicio de extracción y cuidado de uñas encarnadas? ¡Estamos aquí para ayudarte!"
    callToAction={{
      text: 'WhatsApp',
      href: 'https://wa.me/573042912564',
    }}
    items={[
      {
        title: 'Correo electrónico',
        description: 'salud@smdvitalbogota.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call Center',
        description: '+57 (304) 291-2564',
        icon: 'tabler:headset',
      },
      {
        title: 'Síguenos',
        description: '@smdvitalbogota',
        icon: 'tabler:brand-twitter',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Conoce más sobre el cuidado de tus pies"
    information={`Visita nuestro blog para aprender más sobre el manejo y cuidado de uñas encarnadas y otros problemas podales. ¡Gracias por leernos!`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
