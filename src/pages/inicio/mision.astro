---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Servicios Médicos Domiciliarios en Bogotá | SMD Vital',
  description: 'Nuestros médicos a domicilio en Bogotá ofrecen atención médica de calidad en la comodidad de tu hogar. Olvídate del tráfico y las largas esperas en salas de espera, ¡contáctanos!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Nuestra Misión"
    title="Nuestra Misión: Cuidar de Ti, Donde Estés"
    subtitle="Nuestra misión en SMD Vital es proporcionar servicios médicos a domicilio de alta calidad, garantizando atención personalizada y rápida en todo momento."
    actions={[
      { variant: 'primary', text: 'WhatsApp', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Llamada de emergencia', href: '#' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/19471016/pexels-photo-19471016/free-photo-of-mujer-trabajando-escritura-escribiendo.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Click-through Landing Page Hero Image',
    }}
  />

  <CallToAction
    title="Atención Médica en Casa<br> Confiable y Segura"
    subtitle="Nuestro objetivo es ofrecer un servicio que supere tus expectativas, brindando un equipo de médicos a domicilio capacitado y comprometido con tu bienestar. ¡Agenda tu visita hoy mismo!"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/Yoel Dev Soft/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
