---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

import { headerData } from '~/navigation';

const metadata = {
  title: 'Teleconsulta Médica a Domicilio | SMD Vital',
  description:
    'Recibe atención médica profesional a través de teleconsulta en Bogotá, Colombia. Evita desplazamientos y obtén diagnósticos precisos desde la comodidad de tu hogar.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Emergencia',
          href: 'tel:3042912564',
        },
        {
          variant: 'primary',
          text: 'WhatsApp',
          href: 'https://wa.me/573042912564',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Atención Médica sin Salir de Casa"
    actions={[
      { variant: 'primary', target: '_blank', text: 'WhatsApp', href: 'https://wa.me/573042912564' },
      { variant: 'secondary', text: 'Agendar Teleconsulta', href: '#features' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/4225920/pexels-photo-4225920.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Teleconsulta Médica en Bogotá',
      loading: 'lazy',
    }}
  >
    <Fragment slot="title">
      Teleconsulta <br /><span class="text-accent dark:text-white highlight">Médica</span><br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Atención profesional a través de videollamada con médicos certificados, sin necesidad de desplazarte.</span
      >
      Obtén diagnósticos, tratamientos y recomendaciones desde la comodidad de tu hogar en Bogotá, Colombia.
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="¿Por qué elegir nuestro servicio de teleconsulta médica?"
    subtitle="Comprometidos con tu salud y comodidad en Bogotá"
    columns={2}
    items={[
      {
        title: 'Médicos Certificados',
        description:
          'Contamos con un equipo de médicos generales y especialistas altamente capacitados para brindarte atención de calidad.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Ahorro de Tiempo',
        description: `Evita desplazamientos y largas esperas en salas de espera. Realiza tu consulta desde la comodidad de tu hogar.`,
        icon: 'tabler:clock',
      },
      {
        title: 'Diagnósticos Precisos',
        description: 'Utilizamos tecnología confiable para garantizar diagnósticos acertados y tratamientos efectivos.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Privacidad Garantizada',
        description: `Tus datos médicos y personales se manejan con la máxima confidencialidad, cumpliendo con estándares de seguridad.`,
        icon: 'tabler:lock',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Nuestros Servicios"
    subtitle="Descubre cómo SMD Vital Bogotá puede ayudarte con teleconsulta médica."
    isReversed
    items={[
      {
        title: 'Evaluación Inicial',
        description: 'Inicia con una breve entrevista virtual para entender tus síntomas y motivos de consulta.',
      },
      {
        title: 'Videoconsulta Médica',
        description: `Conéctate con uno de nuestros médicos a través de una videollamada segura y estable para recibir tu diagnóstico y recomendaciones.`,
      },
      {
        title: 'Emisión de Fórmulas y Recomendaciones',
        description: `Obtén prescripciones, recomendaciones de tratamiento y pautas de cuidado a seguir, todo sin salir de casa.`,
      },
      {
        title: 'Seguimiento Continuo',
        description: `Realizamos un seguimiento personalizado según tu evolución, ajustando el tratamiento si es necesario.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/4031824/pexels-photo-4031824.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Servicios de Teleconsulta Médica',
      loading: 'lazy',
    }}
  />

  <Content
    isAfterContent={true}
    items={[
      {
        title: 'Mejora tu Experiencia Médica',
        description: `Disfruta de una atención integral sin salir de casa, reduciendo estrés y exponiéndote menos a riesgos externos.`,
      },
      {
        title: 'Beneficios:',
        description: `Menos desplazamientos. <br /> Atención más rápida. <br /> Mayor comodidad y seguridad.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/5327914/pexels-photo-5327914.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Beneficios de la Teleconsulta Médica',
      loading: 'lazy',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Salud a un Clic <br /><span class="text-2xl">en tu Hogar</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Tecnología Avanzada',
        description: `Utilizamos plataformas seguras y estables para ofrecer una experiencia de videoconsulta fluida.`,
      },
      {
        title: 'Beneficios:',
        description: `Conexión estable. <br /> Comunicación clara con el médico. <br /> Intercambio de documentos y fórmulas en línea.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7195310/pexels-photo-7195310.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Tecnología Avanzada en Teleconsulta',
      loading: 'lazy',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Conectividad y Confianza <br /><span class="text-2xl">Garantizadas</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Soporte Continuo',
        description: `Nuestro equipo está disponible para guiarte y resolver tus dudas técnicas o médicas durante todo el proceso.`,
      },
      {
        title: 'Beneficios:',
        description: `Asesoramiento personalizado. <br /> Ayuda inmediata. <br /> Tranquilidad y seguridad en tu atención médica.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7195184/pexels-photo-7195184.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Soporte Continuo en Teleconsulta Médica',
      loading: 'lazy',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Soporte y Atención <br /><span class="text-2xl">Permanentes</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'Atención en Emergencias',
        description: `Ofrecemos orientación médica en situaciones críticas, ayudándote a tomar las mejores decisiones en momentos de urgencia.`,
      },
      {
        title: 'Beneficios:',
        description: `Respuesta inmediata. <br /> Reducción de riesgos. <br /> Apoyo profesional en momentos difíciles.`,
      },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/7195112/pexels-photo-7195112.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1',
      alt: 'Atención en Emergencias a través de Teleconsulta',
      loading: 'lazy',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Apoyo Inmediato <br /><span class="text-2xl">y Seguro</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas frecuentes"
    items={[
      {
        title: '¿Qué es una teleconsulta médica?',
        description:
          'Es una consulta a distancia con un médico a través de videollamada, permitiéndote recibir atención médica profesional sin salir de tu hogar.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Necesito equipo especial para la teleconsulta?',
        description: `Solo necesitas un dispositivo con cámara (como un teléfono inteligente o computadora) y una conexión a Internet estable.`,
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Se pueden emitir fórmulas y órdenes médicas?',
        description:
          'Sí, nuestros médicos pueden emitir fórmulas y órdenes para exámenes, estudios o tratamientos, que recibirás de manera digital.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿La teleconsulta reemplaza una visita presencial?',
        description:
          'En muchos casos sí, pero si el médico determina que necesitas atención presencial, te lo informará y coordinará la visita.',
        icon: 'tabler:chevrons-right',
      },
      {
        title: '¿Cómo agendo una teleconsulta médica?',
        description:
          'Puedes agendar fácilmente a través de WhatsApp, llamando a nuestro call center o completando el formulario en nuestro sitio web.',
        icon: 'tabler:chevrons-right',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Contáctanos"
    subtitle="¿Tienes preguntas sobre nuestro servicio de teleconsulta médica? ¡Estamos aquí para ayudarte!"
    callToAction={{
      text: 'WhatsApp',
      href: 'https://wa.me/573042912564',
    }}
    items={[
      {
        title: 'Correo electrónico',
        description: 'salud@smdvitalbogota.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call Center',
        description: '+57 (304) 291-2564',
        icon: 'tabler:headset',
      },
      {
        title: 'Síguenos',
        description: '@smdvitalbogota',
        icon: 'tabler:brand-twitter',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="Conoce más sobre la teleconsulta y sus beneficios"
    information={`Visita nuestro blog para aprender más sobre la teleconsulta médica, sus ventajas, y cómo puede mejorar tu acceso a la atención en salud. ¡Gracias por leernos!`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
